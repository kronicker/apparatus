{
  "extends": "eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {
    "indent": 0, // EditorConfig
    "newline-after-var": 0,
    "no-use-before-define": 0,
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "never"
    }],
    "quotes": ["error", "single"],
    "require-jsdoc": 0,
    "func-style": ["error", "declaration", {
      "allowArrowFunctions": true
    }]
  }
}
